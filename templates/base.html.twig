<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block meta %}
        {% include "@SuluWebsite/Extension/seo.html.twig" with {
            "seo": extension.seo|default([]),
            "content": content|default([]),
            "localizations": localizations|default([]),
            "shadowBaseLocale": shadowBaseLocale|default(),
        } %}
    {% endblock %}

    {% block style %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="ubuntu-regular">
<header class="header">
    {% block header %}
        <nav class="nav">
            <ul class="nav__list">
                <li class="nav__item nav__logo">
                    <a href="{{ sulu_content_root_path() }}">Home</a>
                </li>

                {% for item in sulu_navigation_root_tree('main') %}
                    <li class="nav__item">
                        <a href="{{ sulu_content_path(item.url, item.webspaceKey) }}"
                           title="{{ item.title }}"
                        >
                            {{ item.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    {% endblock %}
</header>

<main>
    {% block content %}{% endblock %}
</main>

<footer class="footer">
    {% block footer %}
        <p>&copy; Copyright {{ 'now'|date('Y') }} Racista NÃ£o me Trisca</p>
    {% endblock %}
</footer>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
{{ encore_entry_script_tags('app') }}
</body>
</html>
