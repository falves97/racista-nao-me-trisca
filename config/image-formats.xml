<?xml version="1.0" encoding="UTF-8"?>
<formats xmlns="http://schemas.sulu.io/media/formats"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://schemas.sulu.io/media/formats http://schemas.sulu.io/media/formats-1.1.xsd">

    <!-- Fixed width and dynamic height -->
    <format key="720x">
        <scale x="720"/>
    </format>

    <format key="360x">
        <scale x="360"/>
    </format>

    <!-- Dynamic width and fixed height -->
    <format key="x360">
        <scale y="360"/>
    </format>

    <!-- Fixed width and fixed height -->
    <format key="720x360">
        <scale x="720" y="360"/>
    </format>

    <format key="360x202">
        <scale x="360" y="202"/>
    </format>

    <!-- Max width and max height -->
    <format key="720x360-inset">
        <scale x="720" y="360" mode="inset"/>
    </format>
</formats>
